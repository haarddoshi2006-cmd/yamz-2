<!doctype html>
<html lang="en">

{% import "_macros.jinja" as macros %}

<head>
    <title>
        {% block title %}
        YAMZ - Yet Another Metadata Zoo
        {% endblock %}
    </title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8">
    
    <!-- Modern CSS Framework -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/site.css')}}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="icon" type="image/x-icon" href="{{ url_for('static', filename='images/favicon.ico') }}">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">

    {% block head %}
    {% endblock head %}
    
    {% block scripts %}
    <script src="https://kit.fontawesome.com/e5bd26397b.js" crossorigin="anonymous"></script>
    {% endblock scripts %}
</head>

<body class="modern-body">
    <!-- Modern Navigation -->
    <nav class="navbar navbar-expand-lg modern-navbar" aria-label="YAMZ Navigation">
        <div class="container">
            <!-- Brand -->
            <div class="navbar-brand-container">
                {% if session["portal_tag"] %}
                    <div class="dropdown">
                        <a href="#" class="navbar-brand modern-brand" data-bs-toggle="dropdown">
                            <div class="brand-logo">
                                <img src="/static/images/yamz_purple_logo_square_small.png" alt="YAMZ Logo">
                            </div>
                            <div class="brand-text">
                                <span class="brand-name">YAMZ</span>
                                <span class="brand-portal">-{{ session["portal_tag"] }}</span>
                            </div>
                        </a>
                        <ul class="dropdown-menu modern-dropdown">
                            <li><a class="dropdown-item" href="{{ url_for('main.portal_index', portal_tag=session['portal_tag']) }}">
                                <i class="bi bi-collection"></i> YAMZ-{{session["portal_tag"]}}
                            </a></li>
                            <li><a class="dropdown-item" href="{{ url_for('main.leave_portal') }}">
                                <i class="bi bi-house"></i> Main YAMZ
                            </a></li>
                        </ul>
                    </div>
                {% else %}
                    <a class="navbar-brand modern-brand" href="/" title="YAMZ=Yet Another Metadata Zoo - Pronounced 'yams'">
                        <div class="brand-logo">
                            <img src="/static/images/yamz_purple_logo_square_small.png" alt="YAMZ Logo">
                        </div>
                        <div class="brand-text">
                            <span class="brand-name">YAMZ</span>
                            {% if session["old_portal_tag"] %}
                                <span class="brand-portal">-{{session["old_portal_tag"]}}</span>
                            {% endif %}
                        </div>
                    </a>
                {% endif %}
            </div>

            <!-- Mobile Toggle -->
            <button class="navbar-toggler modern-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation Items -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link modern-nav-link" href="{{ url_for('term.list_terms') }}">
                            <i class="bi bi-grid-3x3-gap"></i> Browse Terms
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link modern-nav-link" href="{{ url_for('term.create_term') }}">
                            <i class="bi bi-plus-circle"></i> Add Term
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link modern-nav-link" href="{{ url_for('io.import_document') }}">
                            <i class="bi bi-upload"></i> Import
                        </a>
                    </li>
                    {% if not session['portal_tag'] %}
                    <li class="nav-item">
                        <a class="nav-link modern-nav-link" href="{{ url_for('term.list_tags') }}">
                            <i class="bi bi-tags"></i> Tags
                        </a>
                    </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link modern-nav-link" href="{{ url_for('main.about') }}">
                            <i class="bi bi-info-circle"></i> About
                        </a>
                    </li>
                </ul>

                <!-- Search Bar -->
                {% if g.search_form %}
                <form class="d-flex search-form" method="get" action="{{ url_for('term.search') }}" novalidate>
                    <div class="search-container">
                        <i class="bi bi-search search-icon"></i>
                        {{ g.search_form.q(class='form-control modern-search', placeholder='Search terms...') }}
                    </div>
                </form>
                {% endif %}

                <!-- User Menu -->
                <ul class="navbar-nav ms-auto">
                    {% if current_user.is_authenticated %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle modern-user-menu" href="#" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i>
                            <span class="user-name">{{ current_user.name or 'Account' }}</span>
                        </a>
                        <ul class="dropdown-menu modern-dropdown">
                            <li><a class="dropdown-item" href="{{ url_for('user.edit_profile') }}">
                                <i class="bi bi-person"></i> Profile
                            </a></li>
                            <li><a class="dropdown-item" href="{{ url_for('notify.messages') }}">
                                <i class="bi bi-envelope"></i> Messages 
                                {% if current_user.new_message_count %}
                                    <span class="badge bg-primary ms-2">{{ current_user.new_message_count }}</span>
                                {% endif %}
                            </a></li>
                            {% if current_user.is_administrator %}
                            <li><a class="dropdown-item" href="{{ url_for('admin.index') }}">
                                <i class="bi bi-gear"></i> Admin Dashboard
                            </a></li>
                            {% endif %}
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ url_for('auth.logout') }}">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a></li>
                        </ul>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link modern-nav-link" href="{{ url_for('auth.login') }}">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <!-- Page Header -->
            {% block headline %}
            {% if title %}
            <div class="page-header">
                <h1 class="page-title">{{ title }}</h1>
                {% if g.search_form %}
                <div class="page-search">
                    <form method="get" action="{{ url_for('term.search') }}" novalidate>
                        <div class="search-container">
                            <i class="bi bi-search search-icon"></i>
                            {{ g.search_form.q(class='form-control modern-search', placeholder='Search terms...') }}
                        </div>
                    </form>
                </div>
                {% endif %}
            </div>
            {% endif %}
            {% endblock headline %}

            <!-- Flash Messages -->
            {% with messages = get_flashed_messages() %}
            {% if messages %}
            <div class="alert-container">
                {% for message in messages %}
                <div class="alert alert-success modern-alert alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i>
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                {% endfor %}
            </div>
            {% endif %}
            {% endwith %}

            <!-- Page Content -->
            {% block content %}
            {% endblock content %}
        </div>
    </main>

    <!-- Modern Footer -->
    <footer class="modern-footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h6>Research Center</h6>
                    {{ macros.noline_link('https://cci.drexel.edu/mrc/', 'Drexel Metadata Research Center') }}
                </div>
                <div class="footer-section">
                    <h6>License & Terms</h6>
                    <p>All contributions are dedicated to the public domain under CC0. 
                    By using this site, you agree to Terms of Use and Privacy Policy statements similar to wikimediafoundation.org.</p>
                    <a href="/contact" class="footer-link">Contact YAMZ</a>
                </div>
                <div class="footer-section">
                    <h6>YAMZ</h6>
                    <a href="/" class="footer-brand" title="YAMZ=Yet Another Metadata Zoo - Pronounced 'yams'">
                        <img src="/static/images/yamz_purple_logo_square_small.png" alt="YAMZ Logo">
                        <span>YAMZ</span>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    {% block body_scripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });

        // Add smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
    {% endblock body_scripts %}
</body>
</html>
